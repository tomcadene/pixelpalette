{
  "manifest_version": 3,
  "name": "Pixel Palette - Color Picker",
  "version": "1.0",
  "description": "Pick a color from any webpage.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "pixelpalette_logo_128.png"
  }
}
